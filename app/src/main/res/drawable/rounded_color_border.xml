<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Image -->
    <item android:drawable="@drawable/background_with_image" />

    <!-- Red Border with Radius -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="#137CCF"
                android:width="3dp"
            />
            <corners android:radius="5dp" /> <!-- Radius of corners -->
        </shape>
    </item>
</layer-list>