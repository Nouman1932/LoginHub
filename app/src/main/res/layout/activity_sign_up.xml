<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical"
    android:background="@color/activityBackground"
    tools:context=".SignUp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignUp To"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_15ssp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profileManager"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="@dimen/_20ssp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImageView"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/defaultprofile"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintHorizontal_bias="0.5"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="@dimen/_2sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap on image to choose picture"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="@dimen/_10ssp" />
    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:layout_marginTop="@dimen/_20sdp"
        android:ems="12"
        android:inputType="text"
        android:padding="@dimen/_8sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:drawableTint="@color/black"
        android:hint="First Name"
        android:drawableLeft="@drawable/user"/>
    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:layout_marginTop="@dimen/_5sdp"
        android:ems="12"
        android:inputType="text"
        android:padding="@dimen/_8sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:drawableTint="@color/black"
        android:hint="Last Name"
        android:drawableLeft="@drawable/user"/>
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:layout_marginTop="@dimen/_5sdp"
        android:ems="12"
        android:inputType="textEmailAddress"
        android:padding="@dimen/_8sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:drawableTint="@color/black"
        android:hint="example@gmail.com"
        android:drawableLeft="@drawable/ic_baseline_email_24"/>
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:layout_marginTop="@dimen/_5sdp"
        android:ems="12"
        android:inputType="textPassword"
        android:padding="@dimen/_8sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:drawableTint="@color/black"
        android:hint="Enter Password"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"/>
    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:layout_marginTop="@dimen/_5sdp"
        android:ems="12"
        android:inputType="textPassword"
        android:padding="@dimen/_8sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:drawableTint="@color/black"
        android:hint="Confirm Password"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"/>

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:layout_marginTop="@dimen/_5sdp"
        android:ems="12"
        android:inputType="phone"
        android:padding="@dimen/_8sdp"
        android:drawablePadding="@dimen/_15sdp"
        android:drawableTint="@color/black"
        android:hint="0300-0000-00"
        android:drawableLeft="@drawable/ic_baseline_phone_android_24"/>

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/themecolor"
        android:text="SignUp"
        android:textSize="@dimen/_15ssp"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        app:cornerRadius="5dp"
        android:padding="@dimen/_8sdp"
        />
    <TextView
        android:id="@+id/backToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to login"
        android:gravity="center"
        android:background="@drawable/highlight_background"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/themecolor"
        android:onClick="backToLogin"
        />


</LinearLayout>